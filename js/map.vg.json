{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Immigrants in Australia(2021)",
    "width": 800,
    "height": 400,
    "projection": {"type": "equirectangular"},
    "data":[ {
      "name":"data",
      "url": "https://raw.githubusercontent.com/SijiaAi/3179/main/Homework9/js/ne_10m-1%20(1).json",
      "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
    },{
      "name":"graticule",
      "transform":[
        {
          "type":"graticule"
        }
      ]
      
    }
   ] ,
    "transform": [
      {
        "lookup": "properties.name",
        "from": {
          "data": {
            "url": "https://raw.githubusercontent.com/SijiaAi/3179/main/Homework9/data/immigrants.csv"
        
          },
          "key": "State",
          "fields": ["immigrants"]
        }
      },
      {"calculate": "datum.immigrants + 0.1", "as": "Total Immigrants"}
    ],
    "mark": {"type": "geoshape","stroke":"lightgray"},
    "encoding": {
      "color": {
        "field": "Total Immigrants",
        "type": "quantitative",
        "scale": {"type": "Linear"}
      },
      "tooltip": [
        {"field": "properties.name", "type": "nominal", "title": "State"},
        {"field": "immigrants", "type": "quantitative"}
      ]
    }
  }